{
    "name": "wazum/sluggi",
    "type": "typo3-cms-extension",
    "license": "GPL-2.0-or-later",
    "description": "TYPO3 extension for URL slug management with inline editing, auto-sync, locking, access control, and redirects",
    "homepage": "https://github.com/wazum/sluggi",
    "minimum-stability": "stable",
    "prefer-stable": true,
    "authors": [
        {
            "name": "Wolfgang Klinger",
            "role": "Lead Developer"
        }
    ],
    "keywords": [
        "typo3",
        "slug",
        "url",
        "seo",
        "speaking url",
        "url path",
        "url segment",
        "routing",
        "redirect",
        "realurl"
    ],
    "require": {
        "php": "^8.2",
        "typo3/cms-core": "^12.4 || ^13.4 || ^14.1",
        "typo3/cms-backend": "^12.4 || ^13.4 || ^14.1",
        "typo3/cms-redirects": "^12.4 || ^13.4 || ^14.1"
    },
    "suggest": {
        "georgringer/news-redirect-slug-change": "Generate redirects when news slugs change",
        "internetgalerie/ig-slug": "Rebuild URL slugs in bulk"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.65",
        "phpstan/phpstan": "^2.0",
        "phpunit/phpunit": "^10.5 || ^11.5",
        "typo3/cms-fluid-styled-content": "^12.4 || ^13.4 || ^14.1",
        "typo3/cms-frontend": "^12.4 || ^13.4 || ^14.1",
        "typo3/cms-install": "^12.4 || ^13.4 || ^14.1",
        "typo3/cms-rte-ckeditor": "^12.4 || ^13.4 || ^14.1",
        "typo3/cms-setup": "^12.4 || ^13.4 || ^14.1",
        "typo3/testing-framework": "^7.0 || ^8.0 || ^9.0"
    },
    "autoload": {
        "psr-4": {
            "Wazum\\Sluggi\\": "Classes/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Wazum\\Sluggi\\Tests\\": "Tests/"
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "typo3/class-alias-loader": true,
            "typo3/cms-composer-installers": true
        }
    },
    "extra": {
        "typo3/cms": {
            "extension-key": "sluggi",
            "web-dir": "public"
        }
    },
    "scripts": {
        "test:unit": "phpunit -c Tests/phpunit.xml --testsuite unit",
        "test:functional": "typo3DatabaseDriver=pdo_sqlite phpunit -c Tests/phpunit.functional.xml",
        "phpstan": "phpstan analyse -c phpstan.neon",
        "cs:check": "php-cs-fixer fix --dry-run --diff",
        "cs:fix": "php-cs-fixer fix"
    }
}
